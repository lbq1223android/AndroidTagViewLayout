<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:id="@+id/rlRoot">

    <!-- scene image -->
    <ImageView
        android:id="@+id/ivScene"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        tools:ignore="contentDescription"
        android:src="@drawable/circle_recommend_bg"/>

    <!-- favorite layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_white_black"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/rlFavorite"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_favorite"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tvFavoriteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:maxWidth="36dp"
                android:text="1024"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivFavorite"
                android:layout_marginLeft="3dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <zss.ntu.com.demo5_tagview.TagViewLayout
        android:id="@+id/tagViewLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp" />
    
    <zss.ntu.com.demo5_tagview.FoldLineView
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tagViewLayout"
        app:direction="right_down"/>

    <!-- bottom layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/ivScene"
        android:background="@drawable/gradient_black_white">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivAvatar"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/avatar_shengsheng"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_border_color="#FFFFFF"
            app:riv_border_width="2dp"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_toRightOf="@id/ivAvatar"
            android:layout_alignTop="@id/ivAvatar"
            android:layout_marginLeft="5dp"
            android:maxWidth="120dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:text="叶良辰讨论组"/>
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_alignLeft="@id/tvName"
            android:layout_below="@id/tvName"
            android:singleLine="true"
            android:textColor="#cccccc"
            android:gravity="center"
            android:textSize="9sp"
            android:text="1小时前"/>
        <TextView
            android:id="@+id/tvFollow"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_toRightOf="@id/tvName"
            android:layout_alignTop="@id/tvName"
            android:layout_marginTop="3.5dp"
            android:layout_marginLeft="3dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="9sp"
            android:gravity="center"
            android:text="  已关注  "
            android:background="@drawable/follow_border_unfollowed"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_alignLeft="@id/tvName"
            android:layout_alignBottom="@id/ivAvatar"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:text="这衣服炫酷叼炸天啊！"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnShowTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show tags"/>
        <Button
            android:id="@+id/btnHideTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hide tags"/>
        <Button
            android:id="@+id/btnStartAnimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="play animation"/>
        <Button
            android:id="@+id/btnStopAnimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stop animation"/>
    </LinearLayout>
</RelativeLayout>